<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iitb.root.booksharer.addBookActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddBookText"
        android:layout_marginTop="83dp"
        android:hint="Add A Book"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/addBookButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Book"
        android:id="@+id/addBookButton"
        android:layout_below="@+id/AddBookText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:onClick="addBookButtonOnClick"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Add Author Name"
        android:id="@+id/AddAuthorText"
        android:layout_alignTop="@+id/AddBookText"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/AddAuthorText" />

</RelativeLayout>
